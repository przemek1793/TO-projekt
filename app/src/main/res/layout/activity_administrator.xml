<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/RelativeLayoutStyle"
        tools:context="com.example.przemek.to_atrakcja.activities.AdministratorActivity">

    <TextView
            style="@style/TitleStyle"
            android:id="@+id/AdministratorTitle"
            android:text="@string/AdminTitle"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ManageMaps"
                style="@style/MenuButtonStyle"
                android:text="@string/ManageMaps"
                android:onClick="ManageMaps"
        />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ManagePlaces"
                style="@style/MenuButtonStyle"
                android:text="@string/ManagePlaces"
                android:layout_below="@+id/ManageMaps"
                android:onClick="ManageMarkers"
        />
    </RelativeLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Logout"
            style="@style/MenuButtonStyle"
            android:text="@string/Logout"
            android:onClick="Logout"
            android:layout_alignParentBottom="true"
    />
</RelativeLayout>